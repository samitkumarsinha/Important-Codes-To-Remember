  line chart
   let startx=0, starty=0;
    let endx=startx+20, endy=-(starty+20);
    this.svg

    for(let c=0;c<=30;c++){
      this.svg
      .append('g')
      .attr('transform', 'translate(0,600)')
      .append('line')
      .attr('stroke', 'brown')
      .attr('stroke-width',2)
      .attr('x1',startx)
      .attr('y1',starty)
      .attr('x2', endx)
      .attr('y2', endy)

      startx = endx;
      starty = endy;
      endx = startx + 20;
      endy = -(Math.random()*600);

    }
